{
  "config": {
    "image": "ghcr.io/aplucche/cc_ios-claude-agent:latest",
    "env": {
      "AUTH_TOKEN": "your-secret-token",
      "PORT": "8080",
      "HOST": "0.0.0.0"
    },
    "services": [{
      "ports": [
        {
          "port": 80,
          "handlers": ["http"]
        },
        {
          "port": 443,
          "handlers": ["tls", "http"]
        }
      ],
      "protocol": "tcp",
      "internal_port": 8080,
      "tls_options": {
        "alpn": ["h2", "http/1.1"],
        "versions": ["TLSv1.2", "TLSv1.3"]
      },
      "auto_stop_machines": true,
      "auto_start_machines": true,
      "min_machines_running": 0,
      "concurrency": {
        "type": "connections",
        "hard_limit": 100,
        "soft_limit": 80
      }
    }],
    "checks": [{
      "type": "http",
      "port": 8080,
      "method": "GET",
      "path": "/",
      "interval": "30s",
      "timeout": "10s",
      "grace_period": "5s"
    }],
    "guest": {
      "cpu_kind": "shared",
      "cpus": 1,
      "memory_mb": 256
    }
  },
  "region": "ord",
  "skip_launch": false
}